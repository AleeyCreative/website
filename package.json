{
	"name": "website",
	"version": "0.0.1",
	"scripts": {
		"dev": "svelte-kit dev",
		"start": "node build/index.js",
		"build": "svelte-kit build",
		"package": "svelte-kit package",
		"preview": "svelte-kit preview",
		"prepare": "svelte-kit sync",
		"test": "playwright test",
		"check": "svelte-check --tsconfig ./tsconfig.json",
		"check:watch": "svelte-check --tsconfig ./tsconfig.json --watch",
		"lint": "prettier --ignore-path .gitignore --check --plugin-search-dir=. . && eslint --ignore-path .gitignore .",
		"format": "prettier --ignore-path .gitignore --write --plugin-search-dir=. .",
		"generate-oss": "generate-license-file --input package.json --overwrite --output static/3rd-party-licenses.txt"
	},
	"devDependencies": {
		"@playwright/test": "^1.20.0",
		"@poppanator/sveltekit-svg": "^0.3.2",
		"@sveltejs/adapter-auto": "next",
		"@sveltejs/kit": "next",
		"@typescript-eslint/eslint-plugin": "^5.10.1",
		"@typescript-eslint/parser": "^5.10.1",
		"eslint": "^7.32.0",
		"eslint-config-prettier": "^8.3.0",
		"eslint-plugin-svelte3": "^3.2.1",
		"husky": "^8.0.1",
		"prettier": "^2.5.1",
		"prettier-plugin-svelte": "^2.5.0",
		"pretty-quick": "^3.1.3",
		"rollup-plugin-svelte-svg": "^1.0.0-beta.6",
		"svelte": "^3.44.0",
		"svelte-check": "^2.2.6",
		"svelte-preprocess": "^4.10.1",
		"svelte-windicss-preprocess": "^4.2.6",
		"tslib": "^2.3.1",
		"typescript": "~4.6.2"
	},
	"type": "module",
	"dependencies": {
		"@sveltejs/adapter-node": "^1.0.0-next.78",
		"@sveltejs/adapter-static": "^1.0.0-next.31",
		"and": "^0.0.3",
		"autoprefixer": "^10.4.4",
		"daisyui": "^2.14.3",
		"generate-license-file": "^1.3.0",
		"paper": "^0.12.15",
		"postcss": "^8.4.12",
		"tailwindcss": "^3.0.24",
		"twind": "^0.16.16"
	},
	"husky": {
		"hooks": {
			"precommit": "pretty-quuck --staged"
		}
	}
}
